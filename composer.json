{
    "name": "kletellier/mvc",
    "description": "A small MVC framework based on Symfony component and Eloquent ORM",
    "keywords": ["framework", "eloquent","symfony"],
    "license": "GPL",
    "type": "project",
    "config": {
        "vendor-dir": "plugins"
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/http-foundation": "2.6.*",
        "symfony/routing": "2.6.*@dev",
        "symfony/yaml": "2.6.*@dev",
        "illuminate/database": "*",
        "twig/twig":"1.*",
        "symfony/dependency-injection": "2.6.*@dev",
        "symfony/stopwatch": "2.6.*@dev",
        "swiftmailer/swiftmailer": "5.2.*@dev",     
        "symfony/class-loader": "2.6.*@dev",
        "symfony/finder": "2.6.*@dev",
        "symfony/filesystem": "2.6.*@dev",          
        "symfony/config": "2.6.*@dev",
        "symfony/console": "2.6.*@dev",
        "psr/log": "1.0.*@dev",
        "maximebf/debugbar": "1.*",
        "mobiledetect/mobiledetectlib": "dev-master",
        "symfony/var-dumper": "2.7.*@dev"   
    },
    "autoload": {
        "psr-0": {
            "Application" : "app/",
            "GL" : "vendor/",       
            "DI" : "cache/",     
            "Fpdf" : "vendor/",
            "PHPExcel" : "vendor/PHPExcel/Classes/"
            },
        "files": ["library/functions.php"]
    },
    "scripts": {
        "post-install-cmd": [
            "php app/console debugbar:install",
            "php app/console cache:clear"
        ],
        "post-update-cmd": [
            "php app/console debugbar:install",
            "php app/console cache:clear"
        ]
    },
    "minimum-stability": "dev",
    "optimize-autoloader": true,
    "preferred-install":"dist"
}