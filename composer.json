{
    "name": "kletellier/mvc",
    "description": "A small MVC framework based on Symfony component and Eloquent ORM",
    "keywords": ["framework", "eloquent","symfony"],
    "license": "GPL",
    "type": "project",
    "config": {
        "vendor-dir": "plugins"
    },
    "require": {
         "php": ">=5.4.9",
        "symfony/http-foundation": "3.4.*",
        "symfony/routing": "3.4.*",
        "symfony/yaml": "3.4.*",
        "illuminate/database": "*",
        "symfony/dependency-injection": "3.4.*",
        "symfony/stopwatch": "3.4.*",
        "phpmailer/phpmailer": "5.2.*",  
        "symfony/class-loader": "3.4.*",
        "symfony/finder": "3.4.*",
        "symfony/filesystem": "3.4.*",          
        "symfony/config": "3.4.*",
        "symfony/console": "3.4.*",
        "symfony/event-dispatcher":"3.4.*",
        "psr/log": "1.0.*",
        "maximebf/debugbar": "1.*",
        "mobiledetect/mobiledetectlib": "2.8.*",
        "symfony/var-dumper": "3.4.*",       
        "beberlei/assert": "2.7.*",                
        "danielstjules/stringy": "3.1.*",
        "nesbot/carbon": "1.22.*",
        "predis/predis": "1.1.*",
        "hoa/mime": "~3.0",
        "filp/whoops": "2.1.4",
        "philo/laravel-blade": "3.*",
        "nikic/php-parser":"*"
    },
    "autoload": {
        "psr-4": {
            "Application\\" : "app/Application",
            "Migrations\\" : "app/Migrations",           
            "Facades\\": "app/Facades", 
            "GL\\" : "vendor/GL",       
            "DI\\" : "cache/DI",
            "Parameters\\": "cache/parameters",
            "Route\\": "cache/route",
            "Events\\": "cache/events"
            },
        "files": ["library/functions.php"]
    },
    "suggest": {
        "kletellier/assets": "Add mainstream assets integration easiest.",
        "tecnickcom/tcpdf": "For PDF handling",
        "phpoffice/phpexcel": "For Excel file handling"
    },
    "scripts": {
        "post-install-cmd": [
            "php console cache:clear",
            "php console debugbar:install"
            
        ],
        "post-update-cmd": [
            "php console cache:clear",
            "php console debugbar:install"
        ]
    },
    "minimum-stability": "dev",
    "optimize-autoloader": true,
    "preferred-install":"dist"
}