{
    "name": "kletellier/mvc",
    "description": "A small MVC framework based on Symfony component and Eloquent ORM",
    "keywords": ["framework", "eloquent","symfony"],
    "license": "GPL",
    "type": "project",
    "config": {
        "vendor-dir": "plugins"
    },
    "require": {
        "php": ">=5.4.9",
        "symfony/http-foundation": "3.0.*",
        "symfony/routing": "3.0.*@dev",
        "symfony/yaml": "3.0.*@dev",
        "illuminate/database": "*",
        "twig/twig":"1.24",
        "symfony/dependency-injection": "3.0.*@dev",
        "symfony/stopwatch": "3.0.*@dev",
        "swiftmailer/swiftmailer": "5.4.*@dev",     
        "symfony/class-loader": "3.0.*@dev",
        "symfony/finder": "3.0.*@dev",
        "symfony/filesystem": "3.0.*@dev",          
        "symfony/config": "3.0.*@dev",
        "symfony/console": "3.0.*@dev",
        "psr/log": "1.0.*@dev",
        "maximebf/debugbar": "1.*",
        "mobiledetect/mobiledetectlib": "dev-master",
        "symfony/var-dumper": "2.7.*@dev",
        "tecnickcom/tcpdf": "dev-master",
        "phpoffice/phpexcel": "dev-master",
        "beberlei/assert": "2.3.*@dev",                
        "danielstjules/stringy": "~1.10",
        "nesbot/carbon": "~1.20",
        "predis/predis": "1.1.*@dev",
        "hoa/mime": "~2.0",
        "filp/whoops": "1.1.6",
        "xiaoler/blade": "dev-master",
        "philo/laravel-blade": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Application\\" : "app/Application",
            "Migrations\\" : "app/Migrations",           
            "Facades\\": "app/Facades", 
            "GL\\" : "vendor/GL",       
            "DI\\" : "cache/DI"
            },
        "files": ["library/functions.php"]
    },
    "scripts": {
        "post-install-cmd": [
            "php console debugbar:install",
            "php console cache:clear"
        ],
        "post-update-cmd": [
            "php console debugbar:install",
            "php console cache:clear"
        ]
    },
    "minimum-stability": "dev",
    "optimize-autoloader": true,
    "preferred-install":"dist"
}