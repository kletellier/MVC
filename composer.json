{
    "name": "kletellier/mvc",
    "description": "A small MVC framework based on Symfony component and Eloquent ORM",
    "keywords": ["framework", "eloquent","symfony"],
    "license": "GPL",
    "type": "project",
    "config": {
        "vendor-dir": "plugins"
    },
    "require": {
        "php": ">=5.4.9",
        "symfony/http-foundation": "3.1.*",
        "symfony/routing": "3.1.*@dev",
        "symfony/yaml": "3.1.*@dev",
        "illuminate/database": "*",
        "symfony/dependency-injection": "3.1.*@dev",
        "symfony/stopwatch": "3.1.*@dev",
        "phpmailer/phpmailer": "~5.2",  
        "symfony/class-loader": "3.1.*@dev",
        "symfony/finder": "3.1.*@dev",
        "symfony/filesystem": "3.1.*@dev",          
        "symfony/config": "3.1.*@dev",
        "symfony/console": "3.1.*@dev",
        "psr/log": "1.0.*@dev",
        "maximebf/debugbar": "1.*",
        "mobiledetect/mobiledetectlib": "dev-master",
        "symfony/var-dumper": "3.1.*@dev",       
        "beberlei/assert": "2.6.*@dev",                
        "danielstjules/stringy": "2.3.2",
        "nesbot/carbon": "~1.20",
        "predis/predis": "1.1.*@dev",
        "hoa/mime": "~2.0",
        "filp/whoops": "1.1.6",
        "philo/laravel-blade": "3.*",
        "nikic/php-parser":"*"
    },
    "autoload": {
        "psr-4": {
            "Application\\" : "app/Application",
            "Migrations\\" : "app/Migrations",           
            "Facades\\": "app/Facades", 
            "GL\\" : "vendor/GL",       
            "DI\\" : "cache/DI",
            "Parameters\\": "cache/parameters"
            },
        "files": ["library/functions.php"]
    },
    "suggest": {
        "kletellier/assets": "Add mainstream assets integration easiest.",
        "tecnickcom/tcpdf": "For PDF handling",
        "phpoffice/phpexcel": "For Excel file handling"
    },
    "scripts": {
        "post-install-cmd": [
            "php console cache:clear",
            "php console debugbar:install"
            
        ],
        "post-update-cmd": [
            "php console cache:clear",
            "php console debugbar:install"
        ]
    },
    "minimum-stability": "dev",
    "optimize-autoloader": true,
    "preferred-install":"dist"
}