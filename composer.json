{
    "name": "kletellier/mvc",
    "description": "A small MVC framework based on Symfony component and Eloquent ORM",
    "keywords": ["framework", "eloquent","symfony"],
    "license": "GPL",
    "type": "project",
    "config": {
        "vendor-dir": "plugins"
    },
    "require": {
        "php": ">=5.4.9",
        "symfony/http-foundation": "2.8.*",
        "symfony/routing": "2.8.*@dev",
        "symfony/yaml": "2.8.*@dev",
        "illuminate/database": "*",
        "twig/twig":"1.22",
        "symfony/dependency-injection": "2.8.*@dev",
        "symfony/stopwatch": "2.8.*@dev",
        "swiftmailer/swiftmailer": "5.4.*@dev",     
        "symfony/class-loader": "2.8.*@dev",
        "symfony/finder": "2.8.*@dev",
        "symfony/filesystem": "2.8.*@dev",          
        "symfony/config": "2.8.*@dev",
        "symfony/console": "2.8.*@dev",
        "psr/log": "1.0.*@dev",
        "maximebf/debugbar": "1.*",
        "mobiledetect/mobiledetectlib": "dev-master",
        "symfony/var-dumper": "2.7.*@dev",
        "tecnickcom/tcpdf": "dev-master",
        "phpoffice/phpexcel": "dev-master",
        "beberlei/assert": "2.3.*@dev",                
        "danielstjules/stringy": "~1.10",
        "nesbot/carbon": "~1.20",
        "predis/predis": "1.1.*@dev",
        "hoa/mime": "~2.0",
        "filp/whoops": "1.1.6"
    },
    "autoload": {
        "psr-0": {
            "Application" : "app/",
            "Migrations" : "app/",
            "GL" : "vendor/",       
            "DI" : "cache/"
            },
        "files": ["library/functions.php"]
    },
    "scripts": {
        "post-install-cmd": [
            "php app/console debugbar:install",
            "php app/console cache:clear"
        ],
        "post-update-cmd": [
            "php app/console debugbar:install",
            "php app/console cache:clear"
        ]
    },
    "minimum-stability": "dev",
    "optimize-autoloader": true,
    "preferred-install":"dist"
}