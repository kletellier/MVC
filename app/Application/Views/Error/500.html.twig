<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="initial-scale=1.0, user-scalable=no">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>{{ "error.500title"|trans}}</title>
<link rel="stylesheet" href="{{ url('css/bootstrap.min.css') }}">
    <script src="{{ url('jquery-1.9.1.js')}}"></script>
    <script src="{{ url('js/bootstrap.min.js')}}"></script>
</head>
<body>      
<div class="container-fluid">  
<div id="body" class="col-xs-offset-3 col-xs-6 col-sm-offset-3 col-sm-6">
{% if message %}
    <div class="row">&nbsp;</div>
    <div class="row col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1">
        <div class="panel panel-danger">
          <div class="panel-heading" >
            <h3 class="panel-title " id="titre" >{{ "error.500warnings"|trans}}</h3>
          </div>
          <div id="panel-body" class="panel-body" >
              <h4 id="contenu">{{ message }}</h4>
             {% if line %} <h5 id="contenu">{{ "global.linenumber"|trans}} {{ line }}</h5> {% endif %}
             {% if file %} <h5 id="contenu">{{ "global.file"|trans}} {{ file }}</h5> {% endif %}
          </div>
        </div>
    </div>
{% endif %}
{% if errors %}
        <table class="table table-striped table-condensed table-bordered table-hover" id="liste">
        <thead>
              <tr>
                <td>{{ "global.message"|trans}}</td> 
                <td>{{ "global.line"|trans}}</td>   
                <td>{{ "global.file"|trans}}</td>
              </tr>
        </thead>
        <tbody>
              {% for tmp in errors %}
              <tr>
                    <td>{{ tmp.message|raw }}</td>
                    <td>{{ tmp.line }}</td>
                    <td>{{ tmp.file }}</td>
              </tr>             
          {% endfor %}  
            </tbody>
	</table>
   {% endif %}
</div>	 
</div>
</body>
</html>

 