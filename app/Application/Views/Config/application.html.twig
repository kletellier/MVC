<!DOCTYPE html><html>    <head>		<meta http-equiv="content-type" content="text/html; charset=UTF-8"/>        <title>Application configuration</title>		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">		<script src="http://code.jquery.com/jquery-1.9.1.js"></script>		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>    </head>    <body>       		<div class="container-fluid"> 			<div id="body" class=" col-xs-offset-3 col-xs-6 col-sm-offset-3 col-sm-6">				<div class="panel panel-default">					<div class="panel-heading">Application configuration</div>					<div class="panel-body">						<form role="form" action="{{ url('config/application') }}" method="post">						<div class="form-group">							<label for="debug">Debug mode :</label>							<div class="radio">							  <label>								<input type="radio" name="debug" id="debug1" value="0" {% if application['debug']==false %} checked {% endif %}>								Disable							  </label>							</div>							<div class="radio">							  <label>								<input type="radio" name="debug" id="debug2" value="1" {% if application['debug']==true %} checked {% endif %}>								Enable							  </label>							</div>						</div>						<div class="form-group">							<label for="webpath">Web rootpath :</label>							<input type="text" class="form-control" name="webpath" id="webpath" value="{{application['webpath']}}">						</div>						<div class="form-group">							<label for="twigcache">Enable twig cache :</label>							<div class="radio">							  <label>								<input type="radio" name="twigcache" id="debug1" value="0" {% if application['twig']['cache']==false %} checked {% endif %}>								Disable							  </label>							</div>							<div class="radio">							  <label>								<input type="radio" name="twigcache" id="debug2" value="1" {% if application['twig']['cache']==true %} checked {% endif %}>								Enable							  </label>							</div>						</div>						<div class="form-group">							<label for="alwaysreload">Always reload twig template :</label>							<div class="radio">							  <label>								<input type="radio" name="alwaysreload" id="debug1" value="0" {% if application['twig']['alwaysreload']==false %} checked {% endif %}>								Disable							  </label>							</div>							<div class="radio">							  <label>								<input type="radio" name="alwaysreload" id="debug2" value="1" {% if application['twig']['alwaysreload']==true %} checked {% endif %}>								Enable							  </label>							</div>						</div>							<div class="form-group">							<label for="locale">Locale :</label>							<input type="text" class="form-control" name="locale" id="locale" value="{{application['locale']}}">						</div>					 						<input type="submit" class="btn btn-primary" value="Save">						</form>					</div>				</div>			</div>		</div>    </body></html>