<!DOCTYPE html><html>    <head>		<meta http-equiv="content-type" content="text/html; charset=UTF-8"/>        <title>{{ "configuration.title"|trans }}</title>		<link rel="stylesheet" href="{{ url('css/bootstrap.min.css') }}">		<script src="{{ url('jquery-1.9.1.js')}}"></script>		<script src="{{ url('js/bootstrap.min.js')}}"></script>    </head>    <body>       		<div class="container-fluid"> 			<div id="body" class=" col-xs-offset-3 col-xs-6 col-sm-offset-3 col-sm-6">				<div class="panel panel-default">					<div class="panel-heading">{{ "configuration.title"|trans }}</div>					<div class="panel-body">						<form role="form" action="{{ url('config/application') }}" method="post">						<div class="form-group">							<label for="debug">{{ "configuration.debug"|trans }}</label>							<div class="radio">							  <label>								<input type="radio" name="debug" id="debug1" value="0" {% if application['debug']==false %} checked {% endif %}>								{{ "global.disable"|trans }}							  </label>							</div>							<div class="radio">							  <label>								<input type="radio" name="debug" id="debug2" value="1" {% if application['debug']==true %} checked {% endif %}>								{{ "global.enable"|trans }}							  </label>							</div>						</div>						<div class="form-group">							<label for="webpath">{{ "configuration.rootpath"|trans }}</label>							<input type="text" class="form-control" name="webpath" id="webpath" value="{{application['webpath']}}">						</div>						<div class="form-group">							<label for="engine">{{ "configuration.engine"|trans }}</label>							<input type="text" class="form-control" name="engine" id="engine" value="{{application['template']['engine']}}">						 								<label for="twigcache">{{ "configuration.twigcache"|trans }}</label>							<div class="radio">							  <label>								<input type="radio" name="twigcache" id="debug1" value="0" {% if application['template']['cache']==false %} checked {% endif %}>								{{ "global.disable"|trans }}							  </label>							</div>							<div class="radio">							  <label>								<input type="radio" name="twigcache" id="debug2" value="1" {% if application['template']['cache']==true %} checked {% endif %}>								{{ "global.enable"|trans }}							  </label>							</div>						</div>						<div class="form-group">							<label for="alwaysreload">{{ "configuration.reload"|trans }}</label>							<div class="radio">							  <label>								<input type="radio" name="alwaysreload" id="debug1" value="0" {% if application['twig']['alwaysreload']==false %} checked {% endif %}>								{{ "global.disable"|trans }}							  </label>							</div>							<div class="radio">							  <label>								<input type="radio" name="alwaysreload" id="debug2" value="1" {% if application['twig']['alwaysreload']==true %} checked {% endif %}>								{{ "global.enable"|trans }}							  </label>							</div>						</div>							<div class="form-group">							<label for="locale">{{ "configuration.locale"|trans }}</label>							<input type="text" class="form-control" name="locale" id="locale" value="{{application['locale']}}">						</div>					 						<input type="submit" class="btn btn-primary" value="{{ "global.save"|trans }}">						</form>					</div>				</div>			</div>		</div>    </body></html>